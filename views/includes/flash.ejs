<!-- Success Flash -->
<% if (success && success.length) { %>
<div
  class="alert alert-success col-6 offset-3 alert-dismissible fade show"
  role="alert"
>
  <%= success %><button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>

<!-- Update Flash -->
<% if (update && update.length) { %>
<div
  class="alert alert-info col-6 offset-3 alert-dismissible fade show"
  role="alert"
>
  <%= update %><button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>

<!-- Delete Flash -->
<% if (error && error.length) { %>
<div
  class="alert alert-warning col-6 offset-3 alert-dismissible fade show"
  role="alert"
>
  <%= error %><button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
