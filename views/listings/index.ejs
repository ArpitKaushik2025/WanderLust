<% layout("/layouts/boilerplate") %>

<!-- Filters -->
<div id="filters">
  <a href="/listings/trending">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p id="filter-text">Trending</p>
    </div>
  </a>
  <a href="/listings/rooms">
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
  </a>
  <a href="/listings/city">
    <div class="filter">
      <div><i class="fa-solid fa-city"></i></div>
      <p>City</p>
    </div>
  </a>
  <a href="/listings/mountains">
    <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
  </a>
  <a href="/listings/castles">
    <div class="filter">
      <div><i class="fa-solid fa-fort-awesome"></i></div>
      <p>Castles</p>
    </div>
  </a>
  <a href="/listings/pools">
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
  </a>
  <a href="/listings/camping">
    <div class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
  </a>
  <a href="/listings/farms">
    <div class="filter">
      <div><i class="fa-solid fa-tractor"></i></div>
      <p>Farms</p>
    </div>
  </a>
  <a href="/listings/beach">
    <div class="filter">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beach</p>
    </div>
  </a>
  <a href="/listings/arctic">
    <div class="filter">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Arctic</p>
    </div>
  </a>
  <a href="/listings/boats">
    <div class="filter">
      <div><i class="fa-solid fa-ship"></i></div>
      <p>Boats</p>
    </div>
  </a>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault"
        >Display Total after Taxes</label
      >
    </div>
  </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for (let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br />&#8377; <%=
          listing.price.toLocaleString("en-IN") %> / night
          <i class="tax-info"
            >&nbsp;&nbsp;+18% GST<br /><b
              >Total Price : <span id="final-tax-price">abcd</span></b
            ></i
          >
        </p>
      </div>
    </div>
  </a>
  <% } %>
  <div id="my-data" data-listing="<%= JSON.stringify(allListings) %>"></div>
</div>
<script src="/js/tax.js"></script>
